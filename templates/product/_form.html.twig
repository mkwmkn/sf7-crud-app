{{ form_start(form) }}

    <div class="row mb-3">
        {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="row mb-3">
        {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="row mb-3">
        {{ form_label(form.price, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.price, {'attr': {'class': 'form-control', 'step': '0.01'}}) }}
        {{ form_errors(form.price) }}
    </div>

    <div class="row mb-3">
        {{ form_label(form.stock_quantity, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.stock_quantity, {'attr': {'class': 'form-control', 'type': 'number'}}) }}
        {{ form_errors(form.stock_quantity) }}
    </div>

