{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="row mb-3">
        <div class="col-12">
            <h3>Product Details</h3>
        </div>
        <div class="table table-responsive">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ product.description }}</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>{{ product.price }}</td>
                    </tr>
                    <tr>
                        <th>Stock_quantity</th>
                        <td>{{ product.stockQuantity }}</td>
                    </tr>
                    <tr>
                        <th>Created At</th>
                        <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s', 'Asia/Singapore') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Updated At</th>
                        <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s', 'Asia/Singapore') : '' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-4">
            <a href="{{ path('app_product_index') }}" class="btn btn-outline-dark btn-md width-80-percent">Back to list</a>
        </div>
        <div class="col-sm-4">
            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-outline-warning btn-md width-80-percent">Edit/Delete</a>
        </div>
    </div>
{% endblock %}
